!!! 5
%html.no-js{lang: "en"}
	%head
		%meta{charset: "utf-8"}

		%title= render_page_title
		%meta{name: "description", content: meta_description}
		%meta{name: "keywords", content: meta_keywords}
		%meta{name: "author", content: data.config.site.author}
		%meta{name: "DC.title", content: render_page_title}
		%meta{content: "width=device-width, initial-scale=1", name: "viewport", media: "screen"}

		-# Stylesheets
		= stylesheet_link_tag 'main'

		%link{rel: "author", href: "/humans.txt"}

		-# App Icons
		%link{rel: "shortcut icon", href: "favicon.ico"}

		- if build?
			-# Google Analytics
			-#= partial "../shared/google_analytics"

	%body{class: current_page.data.body_classes || "page project"}
		= partial "layouts/header"
		= yield
		= partial "layouts/footer"

		-# Load all Javascript at the end to avoid render-blocking
		<!-- bower:js -->
		<!-- endbower -->
		= javascript_include_tag "all"
		= javascript_include_tag "https://use.typekit.net/zfn8ebj.js"
		%script{:type=>"text/javascript"}
			"try{Typekit.load({ async: true });}catch(e){}"